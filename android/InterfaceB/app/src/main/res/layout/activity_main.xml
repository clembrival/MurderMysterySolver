<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp"
	android:background="@drawable/background_image" >

	<TextView android:id="@+id/screen_title_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="@string/screen_title"
		android:textColor="@color/firebrick"
		android:textAppearance="?android:textAppearanceLarge"
		android:textStyle="bold"
		android:textSize="25sp" />

	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="40dp"
		android:rowCount="6"
		android:columnCount="1">

		<EditText android:id="@+id/title_textfield"
			android:layout_row="0"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textColorHint="@color/moccasin"
			android:textColor="@color/moccasin"
			android:background="@drawable/textfield"
			android:hint="@string/title_label"
			android:textSize="20sp"
			android:textStyle="bold" />

		<RelativeLayout
			android:layout_row="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginTop="20dp"
			android:orientation="horizontal" >

			<TextView android:id="@+id/year_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="@string/year_label"
				style="@style/textview"/>

			<!--Button android:id="@+id/year_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:text="@string/select_label"
				android:textColor="@color/moccasin"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:background="@color/firebrick"
				android:textStyle="bold"
				android:textSize="15sp" /-->

			<EditText android:id="@+id/year_textField"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:layout_alignParentEnd="true"
				android:background="@drawable/textfield" />

		</RelativeLayout>

		<RelativeLayout
			android:layout_row="2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginTop="20dp"
			android:orientation="horizontal" >

			<TextView android:id="@+id/detective_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="@string/detective_label"
				style="@style/textview" />

			<Spinner android:id="@+id/detective_spinner"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:prompt="@string/detective_prompt"
				android:background="@color/firebrick"
				android:spinnerMode="dropdown" />

		</RelativeLayout>

		<RelativeLayout
			android:layout_row="3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginTop="20dp"
			android:orientation="horizontal" >

			<TextView android:id="@+id/setting_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="@string/setting_label"
				style="@style/textview" />

			<RadioGroup android:id="@+id/setting_group"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:orientation="horizontal"
				android:background="@color/firebrick" >

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/uk_button"
					android:textColor="@color/moccasin"
					android:textSize="18sp" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="5dp"
					android:text="@string/international_button"
					android:textColor="@color/moccasin"
					android:textSize="18sp" />

			</RadioGroup>

		</RelativeLayout>

		<!--RelativeLayout
			android:layout_row="4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginTop="20dp"
			android:orientation="horizontal" >

			<TextView android:id="@+id/cause_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="@string/cause_label"
				style="@style/textview" />

			<Spinner android:id="@+id/cause_spinner"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:prompt="@string/cause_prompt"
				android:background="@color/firebrick"
				android:textColor="@color/moccasin"
				android:spinnerMode="dropdown" />

		</RelativeLayout-->

		<RelativeLayout
			android:layout_row="4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginTop="20dp"
			android:orientation="horizontal" >

			<TextView android:id="@+id/cause_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="@string/pov_label"
				style="@style/textview" />

			<RadioGroup android:id="@+id/pov_group"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:orientation="horizontal"
				android:background="@color/firebrick" >

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/first_button"
					android:textColor="@color/moccasin"
					android:textSize="18sp" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="5dp"
					android:text="@string/third_button"
					android:textColor="@color/moccasin"
					android:textSize="18sp" />

			</RadioGroup>

		</RelativeLayout>

		<Button android:id="@+id/detect_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_marginTop="20dp"
			android:background="@color/firebrick"
			android:textColor="@color/moccasin"
			android:textStyle="bold"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:padding="10dp"
			android:text="@string/detect_button" />

	</GridLayout>

</LinearLayout>