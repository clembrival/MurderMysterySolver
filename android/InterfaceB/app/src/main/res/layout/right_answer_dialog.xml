<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView android:id="@+id/right_answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/answer_dialog_title" />

    <Spinner android:id="@+id/weapon_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/right_answer_title"
        android:entries="@array/cause_array"
        android:focusable="true"
        android:nextFocusForward="@+id/uk_button"
        android:nextFocusDown="@+id/uk_button"
        android:nextFocusUp="@id/year_button" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weapon_spinner"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" >

        <Button android:id="@+id/cancel_right_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:padding="10dp"
            android:text="@string/cancel_label" />

        <Button android:id="@+id/confirm_right_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:layout_toEndOf="@id/cancel_right_answer"
            android:padding="10dp"
            android:text="@string/ok_label" />
    </RelativeLayout>


</RelativeLayout>