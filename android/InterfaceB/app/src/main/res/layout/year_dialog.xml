<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <NumberPicker android:id="@+id/year_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/moccasin" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/year_picker"
        android:layout_marginTop="10dp">

        <Button android:id="@+id/year_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moccasin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/background_button_right"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/year_cancel"/>

        <Button android:id="@+id/year_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/year_cancel_button"
            android:layout_centerHorizontal="true"
            android:textColor="@color/moccasin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/background_button_left"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/year_ok"/>

    </RelativeLayout>

</RelativeLayout>