<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context=".activities.PredictionActivity">

    <TextView android:id="@+id/prediction_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/prediction_title"
        style="@style/titleview" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prediction_title_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ViewFlipper android:id="@+id/view_flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_image">

            <ImageView android:id="@+id/accident_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/accident" />

            <ImageView android:id="@+id/concussion_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/concussion" />

            <ImageView android:id="@+id/drowning_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/drowning" />

            <ImageView android:id="@+id/poison_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/poison" />

            <ImageView android:id="@+id/shooting_view"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/shooting" />

            <ImageView android:id="@+id/stabbing_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/stabbing" />

            <ImageView android:id="@+id/throatslit_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/throatslit" />

            <ImageView android:id="@+id/unknown_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/image_description"
                android:background="@drawable/border_image"
                android:src="@drawable/unknown" />

        </ViewFlipper>

        <TextView android:id="@+id/weapon_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_flipper"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            style="@style/textview" />

        <RelativeLayout android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_below="@id/weapon_caption" >

            <Button android:id="@+id/incorrect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                style="@style/button"
                android:text="@string/incorrect_label"
                android:visibility="invisible"
                android:focusable="true"
                android:nextFocusRight="@+id/correct_button"
                android:nextFocusDown="@+id/back_button" />

            <Button android:id="@+id/correct_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/incorrect_button"
                style="@style/button"
                android:text="@string/correct_label"
                android:visibility="invisible"
                android:focusable="true"
                android:nextFocusLeft="@id/incorrect_button"
                android:nextFocusDown="@+id/back_button" />

        </RelativeLayout>

        <Button android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_layout"
            android:layout_centerHorizontal="true"
            style="@style/button"
            android:text="@string/back_label"
            android:focusable="true"
            android:nextFocusUp="@id/incorrect_button" />

    </RelativeLayout>

</RelativeLayout>