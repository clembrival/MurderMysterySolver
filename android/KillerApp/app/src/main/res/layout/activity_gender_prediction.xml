<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:background="@drawable/background_image"
                tools:context=".activities.WeaponPredictionActivity">

    <TextView android:id="@+id/prediction_title_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="@string/prediction_title"
              style="@style/titleview" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prediction_title_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true">

        <ViewFlipper android:id="@+id/view_flipper"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="5dp"
                     android:background="@drawable/border_image">

            <ImageView android:id="@+id/female_view"
                       android:layout_height="wrap_content"
                       android:layout_width="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:contentDescription="@string/murderer_image_description"
                       android:background="@drawable/border_image"
                       android:src="@drawable/gender_female" />

            <ImageView android:id="@+id/lots_view"
                       android:layout_height="wrap_content"
                       android:layout_width="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:contentDescription="@string/murderer_image_description"
                       android:background="@drawable/border_image"
                       android:src="@drawable/unknown" />

            <ImageView android:id="@+id/male_view"
                       android:layout_height="wrap_content"
                       android:layout_width="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:contentDescription="@string/murderer_image_description"
                       android:background="@drawable/border_image"
                       android:src="@drawable/gender_male" />

            <ImageView android:id="@+id/none_view"
                       android:layout_height="wrap_content"
                       android:layout_width="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:contentDescription="@string/murderer_image_description"
                       android:background="@drawable/border_image"
                       android:src="@drawable/unknown" />

            <ImageView android:id="@+id/error_view"
                       android:layout_height="wrap_content"
                       android:layout_width="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:contentDescription="@string/murderer_image_description"
                       android:background="@drawable/border_image"
                       android:src="@drawable/unknown" />
        </ViewFlipper>

        <TextView android:id="@+id/weapon_caption"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@id/view_flipper"
                  style="@style/textview" />

        <TextView android:id="@+id/confidence_textview"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/weapon_caption"
                  android:layout_margin="5dp"
                  android:layout_centerHorizontal="true"
                  android:padding="5dp"
                  android:background="@color/moccasin"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:textAppearance="?android:textAppearanceSmall"
                  android:textColor="@color/black" />

        <RelativeLayout android:id="@+id/button_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_below="@id/confidence_textview" >

            <Button android:id="@+id/incorrect_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    style="@style/button"
                    android:text="@string/incorrect_label"
                    android:visibility="invisible"
                    android:focusable="true"
                    android:nextFocusRight="@+id/correct_button"
                    android:nextFocusDown="@+id/back_button" />

            <Button android:id="@+id/correct_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/incorrect_button"
                    style="@style/button"
                    android:text="@string/correct_label"
                    android:visibility="invisible"
                    android:focusable="true"
                    android:nextFocusLeft="@id/incorrect_button"
                    android:nextFocusDown="@+id/back_button" />

        </RelativeLayout>

        <Button android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_layout"
                android:layout_centerHorizontal="true"
                style="@style/button"
                android:text="@string/back_label"
                android:focusable="true"
                android:nextFocusUp="@id/incorrect_button" />

    </RelativeLayout>

</RelativeLayout>